<div class="container pt-5">

  <%= link_to '< Home', restaurants_path %>

  <h1><%= @restaurant.name %></h1>

  <h2><%= @restaurant.category.capitalize %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>



  <%= link_to 'edit',
    edit_restaurant_path,
    class: 'btn btn-warning'
     %>

  <%= link_to 'delete',
    restaurant_path(@restaurant),
    method: :delete,
    class: 'btn btn-danger' %>

  <%= link_to 'Destroy', @restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>

  <hr>
  <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>

  <div class="reviews mt-3">
    <% @restaurant.reviews.each do |review| %>
      <div class="review p-3 card">
        <%= review.id %>
        <%= review.content %>
        <%= link_to 'delete', review, method: :delete %>
        <%= link_to 'answer', new_review_answer_path(review), class: 'btn btn-primary' %>
        <% review.answers.each do |answer| %>
          <div>
            <%= answer.content %>
            <%= link_to 'delete answer', answer, method: :delete, data: { confirm: 'Are you sure?' }  %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>



